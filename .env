USER_MANAGEMENT_SERVICE_REDIS_CONTAINER_NAME=user-management-service-redis
USER_MANAGEMENT_SERVICE_REDIS_PORT_NUMBER=6379

#COMMENTS-SERVICE
COMMENTS_SERVICE_CONTAINER_NAME=comments-service
