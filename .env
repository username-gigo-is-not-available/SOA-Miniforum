#ZOOKEPER
ZOOKEEPER_CONTAINER_NAME=zookeeper
ZOOKEEPER_CLIENT_PORT=2181

#KAFKA
KAFKA_CONTAINER_NAME=kafka
KAFKA_PORT_NUMBER=9092
POST_CREATED_TOPIC=post-created-topic
POST_DELETED_TOPIC=post-deleted-topic
GET_COMMENTS_FOR_POST_TOPIC=get-comments-for-post-topic
LIST_ALL_POSTS_TOPIC=list-all-posts-topic

KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=${ZOOKEEPER_CONTAINER_NAME}:${ZOOKEEPER_CLIENT_PORT}
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_INTERNAL:PLAINTEXT
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://${KAFKA_CONTAINER_NAME}:${KAFKA_PORT_NUMBER},PLAINTEXT_INTERNAL://${KAFKA_CONTAINER_NAME}:29092
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_NUM_PARTITIONS=2

#API-GATEWAY
API_GATEWAY_CONTAINER_NAME=api-gateway
API_GATEWAY_PORT_NUMBER=8000

